<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scientific"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/sin"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@id/inv"
            android:background="#b8faff"
            android:text="sin"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/cos"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sin"
            android:background="#b8faff"
            android:text="cos"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/tan"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/cos"
            android:background="#b8faff"

            android:text="tan"

            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp" />


        <Button
            android:id="@+id/cosec"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/sin"
            android:layout_toEndOf="@+id/sin"
            android:background="#b8faff"
            android:text="cosec"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/sec"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sin"
            android:layout_toEndOf="@+id/sin"
            android:background="#b8faff"
            android:text="sec"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/inv"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="#b8faff"
            android:text="inv"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/cot"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/cos"
            android:layout_toEndOf="@+id/sin"
            android:background="#b8faff"
            android:text="cot"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp" />


        <Button
            android:id="@+id/rad"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/sin"
            android:background="#b8faff"
            android:text="RAD"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/eq"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tan"
            android:background="#b8faff"
            android:text="="
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/backsp_"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tan"
            android:layout_toEndOf="@+id/sin"
            android:background="#b8faff"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />


    </RelativeLayout>

</FrameLayout>
